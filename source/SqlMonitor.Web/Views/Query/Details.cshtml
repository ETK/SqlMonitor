@model SqlMonitor.Core.Domain.Query
@{
    ViewBag.Title = "Query Details";
}
<p>
    @Html.ActionLink("< Back to List", "Index")
</p>
<div class="clear10">
</div>
<h2>
    Query Details<span class="float-right">@Ajax.ActionLink("Edit", "Edit", new { id = Model.QueryId }, new AjaxOptions { UpdateTargetId = "query-details" })</span></h2>

<div id="query-details">
@Html.Partial("QueryDetails", Model)
</div>

<div class="clear10">
</div>
<h2>
    Query Results</h2>
@using (Ajax.BeginForm("ResultsCombined", "Query", new { id = Model.QueryId }, new AjaxOptions { UpdateTargetId = "results-placeholder" }, new { id = "result-form" }))
{
    @Html.Partial("QueryDuration")
}
<div class="clear25">
</div>
<div id="results-placeholder">
</div>
<script type="text/javascript">
    $(function () {
        $('#result-form').submit();
    });
</script>
